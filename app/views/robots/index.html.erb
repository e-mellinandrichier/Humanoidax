
<div class="banner">

  <div class="container1">
    <h2> Avec Humano√Ødax </h2>
    <br>

    <h4> Partage ou emprunte ton robot </h4>
    <br>
    <br>
    <div class="search-barre">
      <%= form_with url: robots_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find your robot"
        %>
        <%= submit_tag "Search", class: "animated-link" %>
      <% end %>
    </div>
  </div>

</div>


<div class="container2">


 <%=link_to "Add a new Robot" , new_robot_path, class: "animated-link"%>
<div class="card_container">
  <% @robots.each do |robot| %>
          <div class="cards-products">
            <div class="card-product">
            <%= link_to robot_path(robot), class: "mylink" do %>
              <%= cl_image_tag robot.photo.key, height: 300, width: 400, crop: :fill, class:"card-img" %>
            </div>
                <div class="card-product-infos">


                  <h5> <%= robot.name.capitalize %> </h5>
                  <br>
                  <h6> <%= robot.utility.capitalize %> </h6>
                  <p> <%= robot.description.capitalize %> </p>

                </div>
          </div>
      <% end %>
    <% end %>
</div>

</div>
